[Unit]
Description=InboxCast FastAPI Server
After=network.target

[Service]
Type=simple
User=yszhang
WorkingDirectory=/home/yszhang/inbox-cast
ExecStart=/home/yszhang/.local/bin/uv run uvicorn inboxcast.server.app:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
